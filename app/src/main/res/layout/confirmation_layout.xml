<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btAssalto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:text="Assalto"
        android:drawableLeft="@drawable/assalto"/>

    <Button
        android:id="@+id/btArrombamento"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:text="Arrombamento de carro"
        android:drawableLeft="@drawable/arrombamento_carro"
        />

    <Button
        android:id="@+id/btVandalismo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Vandalismo"
        android:drawableLeft="@drawable/vandalismo" />

    <Button
        android:id="@+id/btCancelar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:layout_marginTop="80dp"
        android:text="Cancelar"
        android:drawableLeft="@drawable/cancel"/>

</LinearLayout>
